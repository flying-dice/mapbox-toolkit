{
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "CommonJS",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES6",
    "outDir": "dist"
  },
  "exclude": ["**/*/node_modules", "**/*.test.ts", "**/*.spec.ts"],
  "include": ["src/**/*"]
}
